            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/color_picker_info"
            app:layout_constraintTop_toBottomOf="@id/color_picker"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/current_color_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/current_color_rgb"
                android:text="@string/color_picker_current_rgb"
                android:textAlignment="center"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/current_color_hsv"
                android:text="@string/color_picker_current_hsv"
                android:textAlignment="center"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>