<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <TextView
            android:text="@string/add_habit_title"
            android:layout_width="360dp"
            android:layout_height="wrap_content" android:id="@+id/add_habit_form_title"
            android:textAlignment="center" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/add"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:id="@+id/add_habit_button"
            app:layout_constraintTop_toBottomOf="@id/color_picker_info"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="@string/name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/habit_name_title"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toStartOf="@id/add_habit_form_title"/>
    <TextView
            android:text="@string/description"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/habit_description_title"
            android:textSize="20sp"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toStartOf="@id/add_habit_form_title"/>
    <TextView
            android:text="@string/priority"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/habit_priority_title"
            android:textSize="20sp"
            android:layout_marginTop="95dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toStartOf="@id/add_habit_form_title"/>
    <TextView
            android:text="@string/type"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/habit_type_title"
            android:textSize="20sp"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toStartOf="@id/add_habit_form_title"/>
    <TextView
            android:text="@string/times"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/habit_times_title"
            android:textSize="20sp"
            android:layout_marginTop="185dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toStartOf="@id/add_habit_form_title"/>
    <TextView
            android:text="@string/period"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/habit_period_title"
            android:textSize="20sp"
            android:layout_marginTop="230dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toStartOf="@id/add_habit_form_title"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/name_default"
            android:ems="10"
            android:id="@+id/habit_name_field"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toEndOf="@id/habit_name_title"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/description_default"
            android:ems="10"
            android:id="@+id/habit_description_field"
            android:layout_marginTop="45dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toEndOf="@id/habit_description_title"/>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/habit_priority_field"
            android:layout_marginTop="98dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toEndOf="@id/habit_priority_title"

            android:entries="@array/priorities"/>
    <RadioGroup
            android:id="@+id/habit_type_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toEndOf="@id/habit_type_title">
        <RadioButton
                android:text="@string/type_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/habit_type_button_positive"/>
        <RadioButton
                android:text="@string/type_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/habit_type_button_negative"/>
    </RadioGroup>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/times_default"
            android:ems="10"
            android:id="@+id/habit_times_field"
            android:layout_marginTop="175dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toEndOf="@id/habit_times_title"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/period_default"
            android:ems="10"
            android:id="@+id/habit_period_field"
            android:layout_marginTop="220dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/add_habit_form_title"
            app:layout_constraintStart_toEndOf="@id/habit_period_title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color_picker_title"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/color_picker_title"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/habit_period_title"
    />

    <HorizontalScrollView
            android:id="@+id/color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/color_picker_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
