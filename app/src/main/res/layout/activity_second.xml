            </FrameLayout>
            <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp">
                <ImageView
                        android:layout_width="80dp"
